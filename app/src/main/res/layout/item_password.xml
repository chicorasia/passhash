<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/itemPlainTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plain text"
            style="?attr/textAppearanceHeadline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemHashTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/itemTextAppearance"
            android:text="Hashed...."
            app:layout_constraintTop_toBottomOf="@+id/itemPlainTv"
            app:layout_constraintStart_toStartOf="@id/itemPlainTv"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/itemEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>